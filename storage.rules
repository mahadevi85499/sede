rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all files
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Allow upload of menu item images
    match /menu-images/{imageId} {
      allow write: if resource.size < 5 * 1024 * 1024 // 5MB limit
        && resource.contentType.matches('image/.*');
    }
    
    // Allow upload of restaurant images
    match /restaurant-images/{imageId} {
      allow write: if resource.size < 10 * 1024 * 1024 // 10MB limit
        && resource.contentType.matches('image/.*');
    }
  }
}
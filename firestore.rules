rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write to events collection (orders and service requests)
    match /events/{document} {
      allow read, write: if true;
    }
    
    // Allow read/write to menu items collection
    match /menuItems/{document} {
      allow read, write: if true;
    }
    
    // Allow read/write to tables collection
    match /tables/{document} {
      allow read, write: if true;
    }
    
    // Allow read/write to settings collection
    match /settings/{document} {
      allow read, write: if true;
    }
    
    // Allow read/write to bills collection
    match /bills/{document} {
      allow read, write: if true;
    }
  }
}